    script(src='/js/utils/jszip/jszip-inflate.js')
    script(src='/js/utils/jszip/jszip.js')
    script(src='/js/utils/excel/xlsx.js')
    script(src='/js/jquery-ui-1.10.3.custom.min.js')
    script(src='/js/views/multiDatesPicker/jquery-ui.multidatespicker.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.0.8/angular.min.js')
    script(src='/js/utils/tags/bootstrap-tagsinput.js')

