extends layout

block content
    div(class='container container-fluid', style='border:2px dashed #bbb; -moz-border-radius:5px;padding:10px;text-align:center;font:20pt bold,"Vollkorn";color:#bbb')#drop.span5
        div(class='dz-default dz-message')
            span Click or drop an XLSX file here to generate

    div(class='panel-group')#accordion
        div(class = "panel panel-default")
            .panel-heading
                h4.panel-title
                    a(class='accordion-toggle', data-toggle='collapse', data-parent='#accordion', href='#choose-holidays').
                        Choose Holidays
            div(class='panel-collapse collapse in')#choose-holidays
                .panel-body
                    div#holidays
                    form(method='post')
                        input(type='text', class='form-control', style='display: none;')#holidays-text

        div(class = "panel panel-default")
            .panel-heading
                h4.panel-title
                    a(class='accordion-toggle', data-toggle='collapse', data-parent='#accordion', href='#add-recipients').
                        Recipients
            div(class='panel-collapse collapse in')#add-recipients
                .panel-body
                    .emails-tagsinput#send-email-div
                        form(method='post')#emails-list
                            input(type='text', data-role='tagsinput', class='form-control', style='display: none;')#emails-input
                            button(type='submit', class='btn btn-default pull-right')#send-email-btn Send XLSX by E-mail
                            button(type='button', class='btn btn-default pull-right')#save-btn Save As XLSX

        div(class = "panel panel-default")#table-panel-div
            .panel-heading#sheet-heading
                h4.panel-title
                    a(class='accordion-toggle', data-toggle='collapse', data-parent='#accordion', href='#statistics-view').
                        Attendence Statistics
            div(class='panel-collapse collapse in')#statistics-view
                .panel-body
                    div#sheet-tab
                    div(class='table-responsive tab-content')#attendence-div

